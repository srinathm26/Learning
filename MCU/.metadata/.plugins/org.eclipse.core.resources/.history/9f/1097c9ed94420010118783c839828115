#include <stdint.h>
#include "stm32f407xx.h"
#include "stm32f407xx_gpio_driver.h"

void delay(){
	for(uint32_t i =0;i< 50000;i++);
}

int main(void)
{
	GPIO_Handle_t GpioLED;
	uint8_t Value;
	GpioLED.pGPIOx = GPIOD;
	GpioLED.PinConfig.PinNumber = GPIO_PIN_12;
	GpioLED.PinConfig.PinMode = GPIO_MODE_OP;
	GpioLED.PinConfig.PinOPtype = GPIO_OP_TYPE_PP;
	GpioLED.PinConfig.PinSpeed = GPIO_OP_SPEED_HI;
	GpioLED.PinConfig.PinPuPdControl = GPIO_PULL_NO;

	GPIO_Handle_t GpioButton;
	GpioButton.pGPIOx = GPIOA;
	GpioButton.PinConfig.PinNumber = GPIO_PIN_0;
	GpioButton.PinConfig.PinMode = GPIO_MODE_IP;
	GpioButton.PinConfig.PinSpeed = GPIO_OP_SPEED_HI;
	GpioButton.PinConfig.PinPuPdControl = GPIO_PULL_NO;

	GPIO_PCLK_CTRL(GpioLED.pGPIOx,GPIO_PIN_SET);
	GPIO_Init(&GpioLED);

	GPIO_PCLK_CTRL(GpioButton.pGPIOx,GPIO_PIN_SET);
	GPIO_Init(&GpioButton);

	while(1){
		Value = GPIO_ReadIPPin(GpioButton.pGPIOx,GpioButton.PinConfig.PinNumber);
		if(Value){
			delay();
			GPIO_ToggleOPPin(GpioLED.pGPIOx ,GpioLED.PinConfig.PinNumber);
		}
	}
}
